<section class="container flex flex-col items-center gap-8 px-8 py-8 min-h-[50vh]">

  <div class="py-8 mx-auto max-w-screen-xl sm:py-16 w-full">

    <div class="max-w-screen-md mb-8 lg:mb-16">
      <h2 class="mb-4 text-3xl tracking-tight font-extrabold text-gray-900">
        <%= t("target_audience.title") %>
      </h2>
      <p class="text-gray-500 sm:text-xl">
        <%= t("target_audience.text") %>
      </p>
    </div>

    <div class="space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0">

      <% @people.each do |person| %>
        <div class="flex flex-col gap-4">
          <div class="rounded-full bg-indigo-600 text-white w-8 h-8 aspect-square grid place-items-center">
            <i class="fa-solid <%= person[:icon] %> "></i>
          </div>
          <h3 class="text-xl font-bold">
            <%= t(person[:heading]) %>
          </h3>
          <p class="text-gray-500">
            <%= t(person[:text]) %>
          </p>
        </div>
      <% end %>

    </div>

  </div>

</section>