<div class="flex flex-col gap-4">

  <h1 class="text-2xl font-bold">
    <%= t(".title") %>
  </h1>

  <%= form_for(
    @resource,
    as: @resource_name,
    url: "/register",
    builder: TailwindBuilder,
    :html => {class: "flex flex-col gap-4 max-w-xs" }) do |f| %>

    <%= render "devise/shared/error_messages", resource: @resource %>

    <div class="<%= @field %>">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="<%= @field %>">
      <%= f.label :locale %>
      <%= f.select(:locale, options_for_select(
        I18n.available_locales.map { |locale| [
          t("locales.#{locale}", :locale => locale),
          locale
        ]
      }, I18n.locale)) %>
    </div>

    <%=
       %>

    <div class="<%= @field %>">
      <%= f.label :company_code %>
      <%= f.text_field :company_code %>
    </div>

    <div class="<%= @field %>">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="<%= @field %>">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="<%= @field %>">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit t(".button") %>
    </div>

  <% end %>

</div>
