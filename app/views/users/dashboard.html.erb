<div class="container flex flex-col gap-10 w-full p-8">

  <%= render layout: "shared/h1" do %>
    Dashboard
  <% end %>

  <div class="flex flex-col gap-8 md:flex-row">

    <section class="w-full flex flex-col gap-6 flex-1 p-6 bg-white border border-gray-200 rounded-lg shadow">

      <div class="flex flex-row justify-between h-8">
        <h2 class="text-2xl font-bold">
          Companies
        </h2>
      </div>
    
      <div class="flex flex-col gap-2">
        <% if @subscriptions.empty? then %>
            <a href="/follow" class="font-bold border-dashed border-2 border-indigo-100 rounded-md w-full flex-1 block p-8 text-center">
              Follow a company âž¡
            </a>
          <% else %>
            <% @subscriptions.each do |subscription| %>
              <% last_refresh = subscription.refreshes.last %>

              <div class="flex flex-row justify-between items-center">
                <div class="flex flex-col max-w-full overflow-hidden">
                  <div class="font-mono">
                    <%= subscription.company_code %>
                  </div>
                  <div class="truncate">
                    <% if last_refresh == nil %>
                      <%=t("dashboard.last_refresh.never")%>
                    <% else %>
                      <%=t("dashboard.last_refresh.date", when: time_ago_in_words(last_refresh.created_at))%>
                    <% end %>
                  </div>
                </div>

                <%= button_to(
                  "Delete",
                  "/subscriptions/#{@user.subscriptions.first.id}",
                  method: :delete,
                  class: "min-w-max-content text-red-500 hover:bg-red-700 hover:text-white font-bold py-2 px-4 rounded"
                ) %>

              </div>

            <% end %>
          <% end %>
      </div>
    </section>

    <section class="w-full flex flex-col gap-6 flex-1 p-6 bg-white border border-gray-200 rounded-lg shadow">

      <div class="flex flex-row justify-between items-center h-8">

        <h2 class="text-2xl font-bold">
          Account
        </h2>

        <%= button_to(
          t("dashboard.logout"),
          destroy_user_session_path,
          method: :delete,
          class: "text-red-700 hover:bg-red-500 hover:text-white py-2 font-bold px-4 rounded"
        ) %>

      </div>

      <div class="flex flex-col gap-2">

        <%= render partial: "dashboard-account-property", :locals => {
          name: "Name",
          value: @user.name,
          href: "name",
          text: "Update name",
        } %>

        <%= render partial: "dashboard-account-property", :locals => {
          name: "Email",
          value: @user.email,
          href: "email",
          text: "Update email",
        } %>

        <%= render partial: "dashboard-account-property", :locals => {
          name: "Language",
          value: @user.locale,
          href: "language",
          text: "Change language",
        } %>
      </section>

    </div>

    <section class="w-full flex flex-col gap-6 flex-1 p-6 bg-white border border-gray-200 rounded-lg shadow">
      <div class="flex flex-row justify-between items-center h-8">
        <h2 class="text-2xl font-bold">
          Admin
        </h2>
      </div>

      <div>
        <% unless @user.notifications.empty? %>
          <%= button_to(
            "Email",
            "/notifications/#{@user.notifications.last.id}/email",
            method: :post,
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
          ) %>
        <% end %>

        <% unless @subscriptions.empty? then %>
          <%= button_to(
            "Refresh",
            "/subscriptions/#{@user.subscriptions.first.id}/refresh",
            method: :post,
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
          ) %>
        <% end %>
      </div>
    </section>

  </div>



</div>