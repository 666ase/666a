<div class="flex flex-col gap-10 w-full p-8 lg:px-0 max-w-5xl">

  <h1 class="text-3xl font-bold">
    <%= t("follow.title") %>
  </h1>

  <div class="flex flex-col gap-2">
    <p>
      <%= t("follow.company_code_text").html_safe %>
    </p>

    <p>
      <%= t("follow.workplace_code_text").html_safe %>
    </p>
  </div>

  <% if !current_user.nil? then %>

    <%= form_for(
      @subscription,
      as: "subscription",
      url: "/follow",
      builder: TailwindBuilder,
      :html => {class: "flex flex-col gap-8 max-w-xs" }) do |f| %>

      <% if @subscription.errors.any? %>
        <div class="error error-success note-shadow">
          <% @subscription.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
          <% end %>
        </div>
      <% end %>

      <div class="w-64 flex flex-col">
        <%= f.label :company_code %>
        <%= f.text_field :company_code %>
      </div>

      <div class="actions">
        <%= f.submit t("follow.submit") %>
      </div>

    <% end %>

  <% end %>

</div>