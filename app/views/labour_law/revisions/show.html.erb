<% content_for(:opengraph) do %>
  <link rel="canonical" href="https://666a.se<%= labour_law_revision_path(@document.document_slug, @revision.revision_code) %>" />
  <% if @revision.draft? %>
    <meta name="robots" content="noindex" />
  <% end %>
<% end %>

<div class="flex flex-col gap-10 w-full p-2 sm:px-4 lg:px-0 pt-8 max-w-5xl">

  <%= render partial: "labour_law/h1", locals: {
    title: @revision.revision_name,
    subtitle: "Version #{@revision.revision_code}, English translation"
  } %>

  <%= render partial: "labour_law/revisions/notice" %>

  <table>
    <thead>
      <th width="50%"></th>
      <th width="50%"></th>
    </thead>

    <tbody>
      <% @elements.each do |element| %>
        <%= render partial: "labour_law/elements/row", locals: {
          element: element,
          links: true,
        } %>
      <% end %>

      <%= render partial: "labour_law/sources" %>

    </tbody>
  </table>

</div>