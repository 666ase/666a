<figure class="container p-8 py-16 min-h-[50vh] max-w-screen-md mx-auto text-center flex flex-col items-center justify-center gap-8">
  <div>
  <svg class="w-10 h-10 mx-auto mb-3 text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 14">
    <path d="M6 0H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3H2a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Zm10 0h-4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3h-1a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Z"/>
  </svg>
  <blockquote>
    <p class="text-2xl italic font-medium text-gray-900">
      <%= t("quote.text") %>
    </p>
  </blockquote>
  <figcaption class="flex items-center justify-center mt-6 gap-2">
    <img
      class="w-6 h-6 rounded-full"
      src="/henry-32.jpeg"
      alt="<%= t("quote.image") %>"
    />
    <div class="flex items-center divide-x-2 divide-gray-500 rtl:divide-x-reverse">
      <cite class="pe-3 font-medium text-gray-900">
        <%= t("quote.name") %>
      </cite>
      <cite class="ps-3 text-sm text-gray-500">
        <%= t("quote.role") %>
      </cite>
    </div>
  </figcaption>
  </div>
  <a href="/2023/10/31/launch-announcement" class="text-blue-500 text-xl">
    <%= t("quote.link") %>
  </a>
</figure>