<div class="container flex flex-col gap-10 w-full p-8">

  <table>
    <thead>
      <th width="50%"></th>
      <th width="50%"></th>
    </thead>

    <tbody>
      <% @elements.each do |left, right| %>
        <tr>
          <% if left.element_type == "h1" %>
            <td>
              <% h1 do %>
                <%= left.element_text %>
              <% end %>
            </td>
            <td>
              <% h1 do %>
                <%= right.element_text %>
              <% end %>
            </td>
          <% elsif left.element_type == "h2" %>
            <td>
              <h2 class="text-2xl font-bold mt-8">
                <%= left.element_text %>
              </h2>
            </td>
            <td>
              <h2 class="text-2xl font-bold mt-8">
                <%= right.element_text %>
              </h2>
            </td>
          <% elsif left.element_type == "h3" %>
            <td>
              <h3 class="text-xl mt-4">
                <%= left.element_text %>
              </h3>
            </td>
            <td>
              <h3 class="text-xl mt-4">
                <%= right.element_text %>
              </h3>
            </td>
          <% else %>
            <td>
              <div class="line-clamp-1">
                <%= @redcarpet.render(left.element_text).html_safe %>
              </div>
            </td>
            <td>
              <div class="line-clamp-1">
                <%= @redcarpet.render(right.element_text).html_safe %>
              </div>
            </td>
          <% end %>
        <% end %>
      </tr>
    </tbody>
  </table>

</div>