<div class="container flex flex-col gap-10 w-full p-2 sm:p-8">

  <table class="">
    <thead>
      <th width="50%"></th>
      <th width="50%"></th>
    </thead>
    <tbody>
      <% @elements.each do |left, right| %>
        <tr>
          <% if left.element_type == "h1" %>
            <td>
              <h1 class="text-3xl font-bold">
                <%= left.element_text %>
              </h1>
            </td>
            <td>
              <h1 class="text-3xl font-bold">
                <%= right.element_text %>
              </h1>
            </td>
          <% elsif left.element_type == "h2" %>
            <td>
              <h2 class="text-2xl font-bold mt-8">
                <%= left.element_text %>
              </h2>
            </td>
            <td>
              <h2 class="text-2xl font-bold mt-8">
                <%= right.element_text %>
              </h2>
            </td>
          <% elsif left.element_type == "h3" %>
            <td class="w-1/2 align-top">
              <h3 class="text-xl mt-4">
                <%= left.element_text %>
              </h3>
            </td>
            <td class="w-1/2 align-top">
              <h3 class="text-xl mt-4">
                <%= right.element_text %>
              </h3>
            </td>
          <% else %>
            <td class="w-1/2 align-top">
              <div class="pb-8 pr-4">
                <%= @redcarpet.render(left.element_text).html_safe %>
              </div>
            </td>
            <td class="w-1/2 align-top">
              <div class="pb-8">
                <%= @redcarpet.render(right.element_text).html_safe  %>
              </div>
            </td>
          <% end %>
        <% end %>
      </tr>
    </tbody>
  </table>

</div>