    <h2 class="text-xl font-bold">
      Policies
    </h2>

    <ol class="flex flex-col gap-4">

      <%= render partial: "policies/link", locals: {
        href: "/accessibility",
        icon: "fa-universal-access",
        text: t("home.accessibility"),
      } %>

      <%= render partial: "policies/link", locals: {
        href: "/privacy",
        icon: "fa-user-secret",
        text: t("home.privacy"),
