<% content_for(:opengraph) do %>
  <meta name="robots" content="noindex">
<% end %>

<div class="flex flex-col px-4 lg:px-0 pt-8 max-w-5xl w-full">
  <%= h1 do %>
    <span class="font-normal md:font-extralight">
      <%= @word.word_text %>
    </span>
    <br />
    <%# <span class="text-lg leading-1 align-top text-slate-500 font-light">
      Glossary Word
    </span> %>
  <% end %>


  <% @words.each do |word| %>
    <div class="mt-4">
      <% if word.word_text != @word.word_text %>
        <h2 class="text-xl font-light text-slate-500">
          <%= word.word_text %>
        </h2>
      <% end %>

      <% @word.translations.each do |translation| %>
        <div class="flex flex-col">
          <h2 class="text-xl font-light text-slate-500">
            <%= translation.translation_text %>
          </h2>
        </div>

        <div class="mt-4">
          <% translation.references.each do |reference| %>
            <% if reference.element.present? %>
              <h3>
                <a class="text-blue-700 underline" href="<%= labour_law_element_path(reference.element.revision.document.document_slug, reference.element.revision.revision_code, section_heading(reference.element).element_slug) %>">
                  <%= section_title(reference.element) %>
                </a>
              </h3>
              <p>
                <%= bold_word(reference.source_text, word.word_text).html_safe %>
              </p>
              <p>
                <%= bold_word(reference.target_text, translation.translation_text).html_safe %>
              </p>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

  <% end %>
</div>