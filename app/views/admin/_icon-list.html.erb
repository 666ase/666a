  <ul role="list" class="divide-y divide-gray-100">
    <% items.each do |item| %>
      <li class="flex justify-between gap-x-6 py-5">
        <div class="flex min-w-0 gap-x-4">
          
          <div class="px-1">
            <span class="w-12 h-12 rounded-full grid place-content-center border-4 border-black">
              <i class="<%= item[:icon] %> text-xl"></i>
            </span>
          </div>
          <div class="min-w-0 flex-auto">
            <p class="text-md font-semibold leading-6 text-gray-900">
              <% if item[:top][:href] %>
                <a class="text-blue-700" href="<%= item[:top][:href] %>">
                  <%= item[:top][:text] %>
                </a>
              <% else %>
                <%= item[:top][:text] %>
              <% end %>
            </p>
            <p class="mt-1 truncate text-sm leading-5 text-gray-500">
              <%= item[:bottom][:text] %>
            </p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>