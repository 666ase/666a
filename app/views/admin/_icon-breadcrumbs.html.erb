<ul role="list" class="flex flex-col gap-2">
  <% items.each do |item| %>

    <li class="flex flex-row gap-x-4 items-center">
      <div class="px-3">
        <span class="w-8 h-8 rounded-full grid place-content-center border-4 border-black">
          <i class="<%= item[:icon] %> text-xs"></i>
        </span>
      </div>
      <p class="text-md font-bold">
        <a class="text-blue-700" href="<%= item[:href] %>">
          <%= item[:text] %>
        </a>
      </p>
    </li>
  <% end %>
</ul>