<div class="container flex flex-col gap-8 w-full p-8">

  <%= render partial: "admin/icon-breadcrumbs", locals: {
    items: [
      {
        icon: "fa-solid fa-lock",
        href: "/admin",
        text: "Admin",
      },
      {
        icon: "fa-solid fa-book",
        href: admin_labour_law_documents_path,
        text: "Labour Law",
      },
      {
        icon: "fa-solid fa-book",
        href: admin_labour_law_document_path(@document),
        text: @document.document_name,
      },
    ]
  } %>

  <%= render partial: "admin/icon-heading", locals: {
    icon: "fa-solid fa-lock",
    text: "Edit",
  } %>

  <%= form_for(
    @document,
    as: "document",
    url: admin_labour_law_document_path(@document),
    builder: TailwindBuilder,
    :html => {class: "flex flex-col gap-8" }) do |f| %>


    <% if @document.errors.any? %>
      <div class="error error-success note-shadow">
        <% @document.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      </div>
    <% end %>

    <%= render layout: "shared/field" do %>
      <%= f.label :document_name %>
      <%= f.text_field :document_name %>
    <% end %>

    <%= render layout: "shared/field" do %>
      <%= f.label :document_code %>
      <%= f.text_field :document_code %>
    <% end %>

    <%= render layout: "shared/field" do %>
      <%= f.label :document_slug %>
      <%= f.text_field :document_slug %>
    <% end %>

    <div class="actions">
      <%= f.submit "Save" %>
    </div>

  <% end %>
</div>