<!doctype html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <meta name="format-detection" content="telephone=no" />
  </head>
  <body dir="<%= I18n.locale == :ar ? "rtl" : "ltr" %>" style="font-family: sans-serif">

    <h1 style="display: flex; align-items: center; column-gap: 0.5rem; font-size: 1.2rem">
      <img src="https://666a.se/logo-32.png" />
      <%= t("notification_email.title",
        document_code: @result.document_code,
      ) %>
    </h1>

    <p>
      <%= t("notification_email.greeting",
        name: @user.name,
      ) %>
    </p>

    <p>
      <%= t("notification_email.subscription",
        company: @result.company_name,
      ) %>
    </p>

    <p style="font-size: 1.1rem">
      <a href="<%= @url %>">
        <%= @result.document_code %>:
        <% if I18n.locale == "sv" %>
          <%= @result.document_type %>
        <% else %>
          <%= t("document_type." + @result.document_type) %>
        <% end %>
      </a>
    </p>

    <p>
      <%= t("notification_email.link_preamble") %>
      <br />
      <a href="<%= @url %>">
        <%= @url %>
      </a>
    </p>

    <p>
      <%= t("notification_email.email_instructions").html_safe %>
    </p>

  </body>
</html>
