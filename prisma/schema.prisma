datasource db {
  provider = "postgresql"
  url = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  code      String   @unique
  name      String
  slug      String   @unique
  created   DateTime @default(now())
  updated   DateTime @default(now())
  @@map("company")
}

model County {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  code           String   @unique
  name           String
  slug           String   @unique
  created        DateTime @default(now())
  updated        DateTime @default(now())
  municipalities Municipality[]
  @@map("county")
}

model Municipality {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  county    County   @relation(fields: [countyId], references: [id])
  countyId  String   @db.Uuid
  code      String   @unique
  name      String
  slug      String   @unique
  created   DateTime @default(now())
  updated   DateTime @default(now())
  @@map("municipality")
}
