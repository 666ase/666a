{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns":{
    "package.json": ".eslint*, .github*, .gitignore, .env*, .next*, next-env*, next.config.js, components.json, postcss.config.js, tailwind.*, tsconfig.*, yarn*, i18n.ts, vercel.json ",
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "off",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.yarn/releases": true
  }
}
